{
  "name": "tvg-boilerplate",
  "version": "1.0.0",
  "description": "Skeleton repository to help start up other TVG frontend apps",
  "main": "src/index.js",
  "browser": "src/index.js",
  "bin": {
    "server": "./bin/server",
    "server-dev": "./bin/server-dev"
  },
  "engines": {
    "node": ">=6.9.10"
  },
  "keywords": [
    "TVG",
    "frontend"
  ],
  "author": "Luis Couto <luis.couto@mindera.com>",
  "license": "UNLICENSED",
  "dependencies": {
    "axios": "^0.16.1",
    "babel-polyfill": "^6.23.0",
    "config": "^1.25.1",
    "cross-env": "^4.0.0",
    "express": "^4.15.2",
    "express-winston": "^2.4.0",
    "lodash": "^4.17.4",
    "npm-run-all": "^4.0.2",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-redux": "^5.0.4",
    "react-router": "^4.1.1",
    "react-router-dom": "^4.1.1",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "serialize-javascript": "^1.3.0",
    "statful-client": "^4.1.5",
    "tvg-conf": "^0.4.1",
    "tvg-mediator": "^0.6.8",
    "tvg-ui-bootstrap": "^4.1.9",
    "winston": "^2.3.1",
    "winston-gke": "^1.0.2"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.0",
    "babel-loader": "^7.0.0",
    "babel-plugin-dynamic-import-node": "^1.0.1",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.4.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-optimize": "^1.0.1",
    "case-sensitive-paths-webpack-plugin": "^2.0.0",
    "circular-dependency-plugin": "^3.0.0",
    "css-loader": "^0.28.1",
    "css-module-flow": "^1.0.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-config-prettier": "^2.0.0",
    "eslint-plugin-compat": "^1.0.2",
    "eslint-plugin-flowtype": "^2.32.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jest": "^20.0.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-prettier": "^2.0.0",
    "eslint-plugin-react": "^6.10.3",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "flow-bin": "^0.45.0",
    "flow-coverage-report": "^0.3.0",
    "get-port": "^3.1.0",
    "happypack": "^3.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^20.0.0",
    "lodash-webpack-plugin": "^0.11.3",
    "mkdirp": "^0.5.1",
    "null-loader": "^0.1.1",
    "nyan-progress-webpack-plugin": "^1.2.0",
    "opn": "^5.0.0",
    "postcss-cssnext": "^2.10.0",
    "postcss-loader": "^2.0.1",
    "postcss-smart-import": "^0.6.12",
    "prettier": "^1.2.2",
    "react-hot-loader": "next",
    "react-svg-loader": "^1.1.1",
    "react-test-renderer": "^15.5.4",
    "style-loader": "^0.17.0",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0",
    "webpack": "^2.4.1",
    "webpack-bundle-analyzer": "^2.4.0",
    "webpack-dev-middleware": "^1.10.2",
    "webpack-hot-middleware": "^2.18.0",
    "webpack-stats-plugin": "^0.1.5"
  },
  "browserslist": [
    "last 3 versions",
    "last 4 iOS versions"
  ],
  "jest": {
    "cacheDirectory": ".tmp/jest",
    "collectCoverage": true,
    "coverageReporters": [
      "html",
      "text",
      "lcov"
    ],
    "coverageDirectory": "reports/coverage/",
    "transformIgnorePatterns": [
      "/node_modules/(?!tvg-)/",
      "/node_modules/identity-obj-proxy/"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/config/jest/fileMock.js",
      "\\.(css)$": "identity-obj-proxy"
    }
  },
  "scripts": {
    "start": "npm run start:prod",
    "test": "run-s stylelint eslint flow flow-coverage jest",
    "flow": "flow --temp-dir=./.tmp/flow/; test $? -eq 0 -o $? -eq 2",
    "flow-coverage": "flow-coverage-report -o reports/flow/ -t html -t text -i 'src/**/*.js' -i 'src/**/*.jsx'",
    "eslint": "./bin/eslint",
    "stylelint": "./bin/stylelint",
    "jest": "jest",
    "build": "run-s test build:prod",
    "build:dev": "cross-env NODE_ENV=development run-p build:dev:*",
    "build:prod": "run-p build:prod:*",
    "build:dll": "webpack --config config/webpack/dll.config.js --env.optimize=false",
    "build:dev:client": "webpack --config config/webpack/client.config.js --env.optimize=false",
    "build:dev:server": "webpack --config config/webpack/server.config.js --env.optimize=false",
    "build:prod:client": "cross-env NODE_ENV=production webpack --config config/webpack/client.config.js",
    "build:prod:server": "cross-env NODE_ENV=production webpack --config config/webpack/server.config.js",
    "server:dev": "./bin/server-dev",
    "server:prod": "cross-env NODE_ENV=production ./bin/server",
    "start:dev": "npm run server:dev",
    "start:prod": "run-s build:prod server:prod",
    "postinstall": "run-s createtmp build:dll",
    "createtmp": "mkdirp .tmp reports",
    "prepush": "npm test"
  }
}
