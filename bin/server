#!/usr/bin/env node
/* eslint-disable comma-dangle */
const express = require('express');
const path = require('path');
const http = require('http');

const app = express();
const clientManifest = require('../build/client.manifest.json');
const bundledServer = require('../build/server.js');


app.set('env', process.env.NODE_ENV || 'production');
app.set('x-powered-by', false);

app.use('/', express.static(path.join(__dirname, '../build')));

app.use((req, res, next) => bundledServer
  .render(req, res, clientManifest)
  .then(html => res.send(html))
  .catch(error => next(error))
);

app.use((err, req, res, next) => (console.log(err), res.send(err)));

const server = http.createServer(app);
server.listen(8080, () => {
  process.stdout.write(`Server listening on: ${server.address().address}:${server.address().port}`);
});
